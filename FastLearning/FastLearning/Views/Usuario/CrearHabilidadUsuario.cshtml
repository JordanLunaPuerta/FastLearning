@model FastLearning.Models.Habilidad

@{
    ViewBag.Title = "CrearHabilidadUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear Habilidad de @(ViewBag.nombres + " " + ViewBag.apellidos)</h2>

@using (Html.BeginForm()) 
{
    
    <div class="form-horizontal">
        <h4>Habilidad</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        <div class="form-group">
            @Html.Label("Tema", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Action("ListarTemas", "Habilidad")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Nivel", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Action("ListarNiveles", "Habilidad")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a usuarios", "Index")
</div>
