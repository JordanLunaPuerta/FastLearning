@model IEnumerable<FastLearning.Models.Habilidad>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de habilidades</h2>

<p>
    @Html.ActionLink("Crear habilidad", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            Usuario
        </th>
        <th>
            Habilidad tema
        </th>
        <th>
            Nivel
        </th>
        <th>
            Estado
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tema.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nivel.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id = item.id }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id = item.id })
        </td>
    </tr>
}

</table>
