@model FastLearning.Models.Habilidad

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear</h2>

@using (Html.BeginForm()) 
{   
    <div class="form-horizontal">
        <h4>Habilidad</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Tema:</label>
            <div class="col-md-10">
                @Html.Action("ListarTemas", "Habilidad")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nivel:</label>
            <div class="col-md-10">
                @Html.Action("ListarNiveles", "Habilidad")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a mis habilidades", "ListarHabilidadPorUsuario")
</div>
