@model FastLearning.Models.Clase

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}
<h1 class="col-md-12"></h1>
<h2 style="text-align:center; font-weight:bold">Crear nueva clase</h2>
<h1 class="col-md-12"></h1>
<div class="container col-xs-12 col-md-offset-1 col-md-10">
    <div class="card table-bordered" style="width: auto; height:auto;background-color:aliceblue">
        <div class="card-body" style="padding-right:3rem; padding-left:3rem">
            @using (Html.BeginForm())
            {
                
            <div class="form-horizontal">
                <h1 class="col-md-12"></h1>
                <div class="form-group">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-md-6">
                        <label class="control-label">Habilidad</label>
                        <div>
                            @Html.DropDownListFor(model => model.id_habilidad, ViewBag.Habilidades as SelectList, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label class="control-label">Descripción</label>
                        <div>
                            @Html.TextAreaFor(model => model.descripcion, new { @class = "form-control", @rows = "2", @style = "resize:none", @required = "true" })
                            @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label class="control-label">Día</label>
                        <div>
                            @Html.EditorFor(model => model.dia, new { htmlAttributes = new { @class = "form-control",@required = "true" } })
                            @Html.ValidationMessageFor(model => model.dia, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-3">
                        <label class="control-label">Lugar</label>
                        <div>
                            @Html.EditorFor(model => model.lugar, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                            @Html.ValidationMessageFor(model => model.lugar, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-3">
                        <label class="control-label">Hora Inicial</label>
                        <div>
                            @*<input type="time" class="form-control" id="hora_inicial" name="hora_inicial" />*@
                            @Html.EditorFor(model => model.hora_inicial, new { htmlAttributes = new { @class = "form-control", @type="time", @required = "true" } })
                            @Html.ValidationMessageFor(model => model.hora_inicial, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-3">
                        <label class="control-label">Hora Final</label>
                        <div>
                            @*<input type="time" class="form-control" id="hora_final" name="hora_final" />*@
                            @Html.EditorFor(model => model.hora_final, new { htmlAttributes = new { @class = "form-control", @type = "time", @required = "true" } })
                            @Html.ValidationMessageFor(model => model.hora_final, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label class="control-label">Fecha Inicial</label>
                        <div>
                            @*<input type="datetime-local" class="form-control" id="fecha_inicial" name="fecha_inicial"/>*@
                            @Html.EditorFor(model => model.fecha_inicial, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local", @required = "true" } })
                            @Html.ValidationMessageFor(model => model.fecha_inicial, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-3">
                        <label class="control-label">Fecha Final</label>
                        <div>
                            @*<input type="datetime-local" class="form-control" id="fecha_final" name="fecha_final" />*@
                            @Html.EditorFor(model => model.fecha_final, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local", @required = "true" } })
                            @Html.ValidationMessageFor(model => model.fecha_final, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-3">
                        <label class="control-label">Precio</label>
                        <div>
                            @Html.EditorFor(model => model.precio, new { htmlAttributes = new { @class = "form-control" , @type="text" ,required="true" ,pattern="[0-9.]+"} })
                            @Html.ValidationMessageFor(model => model.precio, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-3">
                        <label class="control-label">Vacantes</label>
                        <div>
                            @Html.EditorFor(model => model.vacantes, new { htmlAttributes = new { @class = "form-control", @type = "number", @required = "true"} })
                            @Html.ValidationMessageFor(model => model.vacantes, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div style="padding-left:15px ; padding-bottom:15px">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                            Crear
                        </button>
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Crear clase</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        ¿Está seguro de crear esta clase?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                                        <button type="submit" class="btn btn-primary">Crear</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="padding-left:15px">
                        <button type="button" class="btn btn-default">@Html.ActionLink("Regresar a mis clases", "ListarClasePorUsuario")</button>
                    </div>
                </div>
            </div>           
            }
            <h1 class="col-md-12"></h1>
        </div>
    </div>
</div>