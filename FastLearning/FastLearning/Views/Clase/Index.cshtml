@model IEnumerable<FastLearning.Models.Clase>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<h2>Lista de clases disponibles</h2>

<div class="container col-md-12">
    <h5 class="col-md-2">Filtrar busqueda: </h5>
    <select class="form-control col-md-1">
        <option>Tema</option>
        <option>Profesor</option>
        <option>Calificación</option>
    </select>
    <input class="form-control col-md-3" />
    <button class="btn btn-default col-md-1">Buscar</button>
</div>
<h1 class="col-md-12"></h1>
<div class="container col-md-12">
    @foreach (var item in Model)
    {
        <div class="card col-md-4 table-bordered" style="width: 36rem; height:auto;background-color:aliceblue">
            <div class="card-body">
                <h5 class="card-title"><b><big>@Html.DisplayFor(modelItem => item.Habilidad.Tema.nombre)</big></b></h5>
                <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.Habilidad.Usuario.nombres) @Html.DisplayFor(modelItem => item.Habilidad.Usuario.apellidos)</h6>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Dia: @Html.DisplayFor(modelItem => item.dia)</li>
                    <li class="list-group-item">Hora inicial: @Html.DisplayFor(modelItem => item.hora_inicial)</li>
                    <li class="list-group-item">Hora final: @Html.DisplayFor(modelItem => item.hora_final)</li>
                    <li class="list-group-item">Vacantes: @Html.DisplayFor(modelItem => item.vacantes)</li>
                    <li class="list-group-item">Vacantes: @Html.DisplayFor(modelItem => item.ClaseUsuario.Count)</li>
                </ul>
                <button type="button" class="btn btn-default">@Html.ActionLink("Detalles", "Detalles", new { id = item.id })</button>
                <h1></h1>
            </div>
        </div>
    }
</div>
<h1 class="col-md-12"></h1>

