@model IEnumerable<FastLearning.Models.ClaseUsuario>

@{
    ViewBag.Title = "ListarAlumnosPorClase";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<h2 style="text-align:center; color:white">Lista de Alumnos</h2>

<div class="table-responsive container col-md-12">
    <table class="table col-md-12 table-bordered">
        <thead style="background: rgba(255, 255, 255, 0.80);border-color:darkturquoise">
            <tr>
                <th>Alumno</th>
                <th>Foto</th>
                <th>Valoración de perfil</th>
                <th>Descuento</th>
                <th>Monto final</th>
                <th>Nota</th>
            </tr>
        </thead>
        <tbody style="background-color:white">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario.nombres) @Html.DisplayFor(modelItem => item.Usuario.apellidos)
                    </td>
                    <td>
                        <img src="@Html.DisplayFor(modelItem=>item.Usuario.foto)" class="img-responsive" width="60" height="60">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario.calificacion_alumno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pago.DescuentoUsuario.Descuento.nombre)
                    </td>
                    <td>
                        S/ @Html.DisplayFor(modelItem => item.Pago.monto_final)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.calificacion_alumno)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<h1 class="col-md-12"></h1>
<div>
    <button class="btn btn-default" onclick="location.href='@Url.Action("ListarClasePorUsuario","Clase")'">Regresar a mis clases</button>
</div>

