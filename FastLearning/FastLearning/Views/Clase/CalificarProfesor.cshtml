@model FastLearning.Models.ClaseUsuario

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_clase)
        @Html.HiddenFor(model => model.id_usuario)

        <div class="form-group">
            @Html.Label("Profesor:", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Clase.Habilidad.Usuario.nombres, new { htmlAttributes = new { @class = "form-control" , @readonly = "true" } })
            </div>
            <h1 class="col-md-12"></h1>
            @Html.Label("Clase:", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Clase.Habilidad.Tema.nombre, new { htmlAttributes = new { @class = "form-control" , @readonly = "true" } })
            </div>
            <h1 class="col-md-12"></h1>
            @Html.Label("Valoración:", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.calificacion_profesor, new { htmlAttributes = new { @class = "form-control", min="1",max="10", @required = "true" } })
                @Html.ValidationMessageFor(model => model.calificacion_profesor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-8 col-md-2">
                <input type="submit" value="Calificar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

