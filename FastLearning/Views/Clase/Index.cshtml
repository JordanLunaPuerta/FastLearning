@model IEnumerable<FastLearning.Models.Clase>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<h2 style="font-weight:bold">Lista de clases disponibles</h2>

<div class="container col-md-12">
    @using (Html.BeginForm())
    {
    <p>
        <h4 class="col-md-2">Buscar Clases :</h4>
        <input type="text" class="form-control col-md-3" name="buscar" />
        @*<div class="col-md-3">@Html.TextBox("buscar", "", new { @class = "form-control" })</div>*@
        <button type="submit" class="btn btn-default col-md-1">Buscar</button>
    </p>
    }
</div>
<h1 class="col-md-12"></h1>
<div class="container col-md-12">
    @foreach (var item in Model)
    {
        <div class="card col-md-4 col-xs-12 table-bordered " style="width: 36rem; height:auto;background-color:aliceblue">
            <div class="card-body">
                <h5 class="card-title" style="word-wrap: break-word; text-align:center"><b><big>@Html.DisplayFor(modelItem => item.Habilidad.Tema.nombre)</big></b></h5>
                <h6 class="card-subtitle mb-2 text-muted" style="text-align:center">@Html.DisplayFor(modelItem => item.Habilidad.Usuario.nombres) @Html.DisplayFor(modelItem => item.Habilidad.Usuario.apellidos)</h6>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Dia: @Html.DisplayFor(modelItem => item.dia)</li>
                    <li class="list-group-item">Hora inicial: @Html.DisplayFor(modelItem => item.hora_inicial)</li>
                    <li class="list-group-item">Hora final: @Html.DisplayFor(modelItem => item.hora_final)</li>
                    <li class="list-group-item">Precio: @Html.DisplayFor(modelItem => item.precio)</li>
                    <li class="list-group-item">Vacantes: @Html.DisplayFor(modelItem => item.vacantes)</li>
                    <li class="list-group-item">Inscritos: @Html.DisplayFor(modelItem => item.ClaseUsuario.Count)</li>
                </ul>
                <button type="button" class="btn btn-default">@Html.ActionLink("Ver Detalles", "Detalles", new { id = item.id })</button>
                <h1></h1>
            </div>
        </div>
    }
</div>
<h1 class="col-md-12"></h1>

