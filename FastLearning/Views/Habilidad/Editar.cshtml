@model FastLearning.Models.Habilidad

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}
<h1 class="col-md-12"></h1>
<h2 style="text-align:center; font-weight:bold">Editar Habilidad</h2>
<h1 class="col-md-12"></h1>
<div class="container col-xs-12 col-md-offset-3 col-md-6">
    <div class="card table-bordered" style="width: auto; height:auto;background-color:aliceblue">
        <div class="card-body col-md-offset-1" style="padding-left:1rem">
            @using (Html.BeginForm())
            {
                <h1 class="col-md-12"></h1>
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.id)

                    <div class="form-group">
                        <label class="control-label col-md-3">Tema:</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model=>model.Tema.nombre, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">Nivel:</label>
                        <div class="col-md-8">
                            @Html.Action("ListarNiveles")
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-8">
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                                Editar
                            </button>
                            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Editar habilidad</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            ¿Está seguro de editar esta habilidad?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                                            <button type="submit" class="btn btn-primary">Editar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <h1 class="col-md-12"></h1>
            <div>
                <button type="button" class="btn btn-default">@Html.ActionLink("Regresar a mis habilidades", "ListarHabilidadPorUsuario")</button>
            </div>
            <h1 class="col-md-12"></h1>
        </div>
    </div>
</div>